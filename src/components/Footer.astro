<style>

.footer_ux {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    background-color: #031716;
    margin-top: 100px;
}
.footer_ux h4, a, p{
    color: #D2D2D2;
    font-family: "RobotoCondensed-Regular";
    text-decoration:none;
}
.footer_ux h4, .sponsor_list h4{
    text-align: center;
    font-size: 12px;
    color: #12b3aa;
}
.footer_ux ul{
    list-style: none;
    font-size: 10px;
    line-height: 20px;
}
.footer_ux p{
    font-size: 10px;
    text-align: center;
}
.sponsor_list img{
    width: 25%;
    padding-top: 4px;
    padding-right: 0px;
    padding-bottom: 8px;
    padding-left: 25px;
}
.contact h4{
    text-align: left;
    margin-left: 38px;
}
@media (min-width: 900px){
    .footer_ux h4, .sponsor_list h4{
    font-size: 16px;
}
.footer_ux ul{
    font-size: 12px;
    line-height: 30px;
    margin-left: 70px;
}
.contact h4{
    text-align: left;
    margin-left: 108px;
}
.footer_ux p{
    font-size: 12px;
}
.sponsor_list img{
    width: 16%;
    padding-right: 0px;
    padding-bottom: 20px;
    padding-left: 100px;
}
.sponsor_list h4{
    margin-left: -30px;
}
}
</style>